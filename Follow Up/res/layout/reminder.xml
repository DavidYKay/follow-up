<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="15dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout 
	    android:orientation="horizontal"
	    android:gravity="center_vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
    >
	    <TextView
	    	android:id="@+id/replyDescription"
		    android:layout_weight="1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	    />
	    <Button
	    	android:id="@+id/replyButton"
		    android:drawableLeft="@drawable/reply"
		    android:text="Reply"
		    android:layout_width="130dip"
		    android:layout_height="wrap_content"
	    />
	</LinearLayout>
    <LinearLayout 
	    android:orientation="horizontal"
	    android:gravity="center_vertical"
	    android:layout_marginTop="20dip"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
    >
	    <TextView
	    	android:id="@+id/ignoreThisOneDescription"
	    	android:text="If you do not need to reply to this particular message, you can ignore it."
		    android:layout_weight="1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	    />
	    <Button
	    	android:id="@+id/ignoreThisOneButton"
		    android:drawableLeft="@drawable/ignore_one"
		    android:text="Ignore this message"
		    android:layout_width="130dip"
		    android:layout_height="wrap_content"
	    />
	</LinearLayout>
    <LinearLayout 
	    android:orientation="horizontal"
	    android:gravity="center_vertical"
	    android:layout_marginTop="20dip"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
    >
	    <TextView
	    	android:id="@+id/ignoreFutureOnesDescription"
		    android:layout_weight="1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	    />
	    <Button
	    	android:id="@+id/ignoreFutureOnesButton"
		    android:drawableLeft="@drawable/ignore_all"
		    android:layout_width="130dip"
		    android:layout_height="wrap_content"
	    />
	</LinearLayout>

</LinearLayout>
